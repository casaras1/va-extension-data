<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <parent>
        <groupId>dev.ikm.vaextension</groupId>
        <artifactId>va-extension-data</artifactId>
        <version>1.0.0-SNAPSHOT</version>
    </parent>

    <groupId>dev.ikm.maven</groupId>
    <artifactId>va-extension-pipeline</artifactId>
    <packaging>jar</packaging>

    <name>va-extension-ct-pipeline</name>
    <url>http://maven.apache.org</url>

    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-dependency-plugin</artifactId>
                <executions>
                    <execution>
                        <id>copy-origin-data-dependency</id>
                        <phase>validate</phase>
                        <goals>
                            <goal>copy</goal>
                        </goals>
                        <configuration>
                            <stripVersion>true</stripVersion>
                            <artifactItems>
                                <artifactItem>
                                    <groupId>dev.ikm.data.vaextension</groupId>
                                    <artifactId>va-extension-origin</artifactId>
                                    <version>vaextension-${source.version}+1.0.0-SNAPSHOT</version>
                                    <type>zip</type>
                                    <overWrite>true</overWrite>
                                    <outputDirectory>${project.build.directory}/input-data</outputDirectory>
                                </artifactItem>
                            </artifactItems>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
        
            <plugin>
                <groupId>dev.ikm.maven</groupId>
                <artifactId>va-extension-transformation-maven-plugin</artifactId>
                <configuration>
                    <namespaceString>${origin.namespace}</namespaceString>
                    <datastorePath>${project.build.directory}/vaextension</datastorePath>
                    <inputDirectoryPath>${project.build.directory}/input-data/vaextension-origin.zip</inputDirectoryPath>
                    <dataOutputPath>${project.build.directory}</dataOutputPath>
                </configuration>
                <executions>
                    <execution>
                        <id>run-va-extension-transformation</id>
                        <phase>install</phase>
                        <goals>
                            <goal>run-va-extension-transformation</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>
</project>
